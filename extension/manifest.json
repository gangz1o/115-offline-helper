{
  "manifest_version": 3,
  "name": "115 Offline Helper",
  "version": "1.0.0",
  "description": "Automatically detect magnet/ed2k links and push to 115.com offline download.",
  "permissions": [
    "storage",
    "cookies",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.115.com/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "115 Offline Helper",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
